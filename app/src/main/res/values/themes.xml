<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AplicacionDeViajes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (ahora naranja) -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/celeste</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color (ahora celeste) -->
        <item name="colorSecondary">@color/celeste</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AplicacionDeViajes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AplicacionDeViajes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AplicacionDeViajes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
