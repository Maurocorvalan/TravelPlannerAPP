<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@android:color/white"
    android:strokeColor="@android:color/darker_gray"
>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="168dp"
android:gravity="start"
android:orientation="horizontal"
android:padding="10dp"
android:background="@drawable/card_background">

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="150dp"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_actividad_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actividad"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="5dp" />

    <TextView
        android:id="@+id/text_actividad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actividad:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:padding="5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_ubicacion_value"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="Ubicaci贸n"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="5dp" />

    <TextView
        android:id="@+id/text_ubicacion"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="Ubicaci贸n:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:padding="5dp"
        android:textStyle="bold" />
</LinearLayout>

<!-- Columna de Botones de Editar y Eliminar (Derecha) -->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical">

    <!-- Bot贸n Editar -->
    <Button
        android:id="@+id/btn_editar_itinerario"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Editar"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <!-- Bot贸n Eliminar -->
    <Button
        android:id="@+id/btn_eliminar_itinerario"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Eliminar"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</LinearLayout>

</LinearLayout>

    </androidx.cardview.widget.CardView>
