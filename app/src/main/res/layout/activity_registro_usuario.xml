<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/backgroundregistro">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:textSize="19sp"
        android:text="Completa tus datos y registrate!" />

    <EditText
        android:id="@+id/edit_Nombre"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:contentDescription="Campo de texto para nombre y apellido"
        android:hint="Nombre y Apellido"
        android:importantForAccessibility="yes"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#333333"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_Correo"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:hint="Correo"
        android:textColor="#333333"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Campo de texto para correo" />

    <!-- Campo Contraseña -->

    <!-- Botón Registrarme -->
    <EditText
        android:id="@+id/edit_contrasenia"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:contentDescription="Campo de texto para contraseña"
        android:hint="Contraseña"
        android:importantForAccessibility="yes"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#333333"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_registro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:contentDescription="Botón para registrarse"
        android:importantForAccessibility="yes"
        android:text="Registrarme"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


</LinearLayout>
