<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Secci贸n de informaci贸n (Izquierda) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Viaje"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/descripcionViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripci贸n del viaje" />

            <TextView
                android:id="@+id/fechaInicioViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha inicio: " />

            <TextView
                android:id="@+id/fechaFinViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha fin: " />

        </LinearLayout>

        <!-- Bot贸n (Derecha) -->
        <Button
            android:id="@+id/btnVerItinerario"
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:layout_gravity="center_vertical"
            android:text="Ver Itinerario" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
