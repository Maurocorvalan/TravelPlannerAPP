<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.perfil.PerfilFragment"
        >

        <TextView
            android:id="@+id/tvIdPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Nombre"
            android:textColor="#DCD8FF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.136"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="289dp"
            android:layout_height="51dp"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:textColor="#1B1B1B"
            android:textColorHint="#5D5D5D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.442"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIdPago" />

        <TextView
            android:id="@+id/tvMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textColor="#DCD8FF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.146"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNombre" />

        <EditText
            android:id="@+id/etMail"
            android:layout_width="289dp"
            android:layout_height="51dp"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"

            android:ems="10"
            android:hint="Correo"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:textColor="#1B1B1B"
            android:textColorHint="#5D5D5D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.442"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMail" />

        <Button
            android:id="@+id/btGuardarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#95B877"
            android:text="Aplicar"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etMail" />

        <Button
            android:id="@+id/btCambiarContrasenia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="52dp"
            android:text="Cambiar contraseña"
            android:backgroundTint="#FF793D"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btGuardarPerfil"
            app:layout_constraintVertical_bias="0.033" />

        <EditText
            android:id="@+id/etContraActual"
            android:layout_width="289dp"
            android:layout_height="51dp"
            android:layout_marginTop="24dp"
            android:paddingStart="10dp"

            android:ems="10"
            android:hint="Ingrese la contraseña actual"
            android:inputType="textPassword"
            android:visibility="gone"
            android:background="@drawable/edit_text_background"
            android:textColor="#1B1B1B"
            android:textColorHint="#5D5D5D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.439"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btCambiarContrasenia" />

        <EditText
            android:id="@+id/etContraNueva"
            android:layout_width="289dp"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"

            android:ems="10"
            android:hint="Ingrese la nueva contraseña"
            android:inputType="textPassword"
            android:visibility="gone"
            android:background="@drawable/edit_text_background"
            android:textColor="#1B1B1B"
            android:textColorHint="#5D5D5D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.436"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etContraActual" />

        <EditText
            android:id="@+id/etContraConfirmar"
            android:layout_width="289dp"
            android:layout_height="51dp"
            android:paddingStart="10dp"

            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Confirmar nueva contraseña"
            android:inputType="textPassword"
            android:visibility="gone"
            android:background="@drawable/edit_text_background"
            android:textColor="#1B1B1B"
            android:textColorHint="#5D5D5D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.436"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etContraNueva" />

        <Button
            android:id="@+id/btAplicarContra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:visibility="gone"
            android:text="Aplicar contraseña"
            android:backgroundTint="#FF793D"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etContraConfirmar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
