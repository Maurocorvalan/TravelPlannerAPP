<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_nombre_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="start" />

    <EditText
        android:id="@+id/edit_nombre"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:hint="Nombre" />

    <TextView
        android:id="@+id/text_descripcion_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción:"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_gravity="start" />

    <EditText
        android:id="@+id/edit_descripcion"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:hint="Descripción" />

    <TextView
        android:id="@+id/text_fecha_inicio_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha Inicio:"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_gravity="start" />

    <EditText
        android:id="@+id/edit_fecha_inicio"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:hint="Fecha Inicio"
        android:focusable="false"
        android:clickable="true"/>

    <TextView
        android:id="@+id/text_fecha_fin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha Fin:"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_gravity="start" />

    <EditText
        android:id="@+id/edit_fecha_fin"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:hint="Fecha Fin"
        android:focusable="false"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_editar_viaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editar viaje"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_eliminar_viaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eliminar viaje"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
